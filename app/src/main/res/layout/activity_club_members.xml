<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/myScrollView1"
    tools:context=".Club.ClubMembersActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="26sp"
            android:id="@+id/headsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:text="Club Heads"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/headsList"
            android:nestedScrollingEnabled="false"
            android:isScrollContainer="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headsTextView"
            android:layout_marginTop="10dp" />


        <TextView
            android:textSize="26sp"
            android:id="@+id/membersTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headsList"
            android:layout_marginTop="10dp"
            android:background="#DCDCDC"
            android:text="Club Members"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/membersList"
            android:nestedScrollingEnabled="false"
            android:isScrollContainer="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/membersTextView"
            android:layout_marginTop="10dp" />


        <ProgressBar
            android:id="@+id/clubprogressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:indeterminateTint="#000" />


    </RelativeLayout>
</ScrollView>